<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon author ../loggedUser _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{truncate body 150}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{author.image}}" alt="">
                        <a href="/stories/user/{{author._id}}">{{author.displayName}}</a>
                    </div>
                    <div class="card-action center-align">
                        <a href="/stories/{{_id}}" class="btn grey">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories to display</p>
    {{/each}}
</div>